{
    "manifest_version": 3,
    "name": "TikTok Fact Checker",
    "version": "1.0.0",
    "description": "Fact-check TikTok videos with AI-powered analysis",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "TikTok Fact Checker"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.tiktok.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "logo.png"
            ],
            "matches": [
                "*://*.tiktok.com/*"
            ]
        }
    ]
}